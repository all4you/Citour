{
  "name": "citour-api",
  "version": "1.0.0",
  "description": "Citour API - Cloudflare Workers + Hono + D1",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "dev:remote": "wrangler dev --remote",
    "deploy": "wrangler deploy",
    "db:init": "wrangler d1 execute citour-db --local --file=./schema.sql",
    "db:init:remote": "wrangler d1 execute citour-db --file=./schema.sql",
    "db:studio": "wrangler d1 execute citour-db --local --command=\"SELECT name FROM sqlite_master WHERE type='table'\""
  },
  "dependencies": {
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251209.0",
    "typescript": "^5.9.3",
    "wrangler": "^3.0.0"
  }
}
